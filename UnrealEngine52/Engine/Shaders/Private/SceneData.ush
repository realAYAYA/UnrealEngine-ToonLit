float3 UnpackHitProxyId(uint HitProxyPacked)
{
	// BGR (dword) -> RGA (float)
	return float3
	(
		float((HitProxyPacked       ) & 0xFF),
		float((HitProxyPacked >>  8u) & 0xFF),
		float((HitProxyPacked >> 16u) & 0xFF)
	) * (1.0f / 255.0f);
}

