	#define MOBILE_DEFERRED_SHADING 0
#endif

#ifndef POST_PROCESS_AR_PASSTHROUGH
	#define	POST_PROCESS_AR_PASSTHROUGH 0
#endif

#ifndef IS_MOBILE_DEFERREDSHADING_SUBPASS
	#define IS_MOBILE_DEFERREDSHADING_SUBPASS 0
