
# The empty line above is needed to prevent occasional concatenation
# This file expects CC, AR_RC, RANLIB, CPP, CROSS_SYSROOT to be set 

RM_F=del /S 

CFLAGS= -fPIC -g -c -O2 -ffunction-sections -funwind-tables -fno-strict-aliasing -fno-exceptions -fno-short-enums -x c
CPPFLAGS= -I../include/ -DFT2_BUILD_LIBRARY -DNDEBUG -target x86_64-unknown-linux-gnu -Wno-null-conversion

OBJS = winfonts/winfnt.o \
	type42/type42.o \
	cid/type1cid.o \
	type1/type1.o \
	truetype/truetype.o \
	sfnt/sfnt.o \
	raster/raster.o \
	psnames/psmodule.o \
	pshinter/pshinter.o \
	psaux/psaux.o \
	pfr/pfr.o \
	pcf/pcf.o \
	base/ftmm.o \
	base/ftotval.o \
	base/ftpatent.o \
	base/ftpfr.o \
	base/ftsynth.o \
	base/fttype1.o \
	base/ftwinfnt.o \
	base/ftxf86.o \
	base/ftlcdfil.o \
	base/ftbbox.o \
	base/ftgxval.o \
	smooth/smooth.o \
	base/ftsystem.o \
	base/ftstroke.o \
	lzw/ftlzw.o \
	base/ftinit.o \
	gzip/ftgzip.o \
	base/ftglyph.o \
	base/ftgasp.o \
	base/ftfstype.o \
	base/ftdebug.o \
	cache/ftcache.o \
	base/ftbitmap.o \
	base/ftbase.o \
	cff/cff.o \
	bdf/bdf.o \
	autofit/autofit.o


LIBFREETYPE = libfreetype2412_fPIC.a

all: $(LIBFREETYPE)

.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) $(CROSS_SYSROOT) $< -o $@

$(LIBFREETYPE): $(OBJS)
	$(AR_RC) $@  $(OBJS)
	$(RANLIB) $@

clean:
clean:
	$(RM_F) /S *.o
	$(RM_F) $(LIBFREETYPE)

install: $(LIBFREETYPE)
   xcopy  $(LIBFREETYPE) ..\Lib\Linux\x86_64-unknown-linux-gnu\  /F /R /Y /I
