			DistributeWork( Task, LaneIndex, NumChildren );

			if( bTaskReady )
			{
				// Clear processed element so we leave the buffer cleared for next pass.
				Task.Clear( GlobalWorkQueue, TaskReadOffset );
				bTaskComplete = true;
			}
		}
		else
